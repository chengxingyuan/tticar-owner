<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.czy.tticar.owner.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.czy.tticar.owner.model.User">
        <result column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="pass_word" property="passWord"/>
    </resultMap>
    <select id="queryUserById" resultMap="BaseResultMap" parameterType="Long">
        SELECT * FROM owner_user WHERE id = #{id}
    </select>


</mapper>